{
  "name": "graphql-express-seed",
  "version": "1.0.0",
  "description": "graphql express server",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start:prod": "node dist/app.js",
    "start": "nodemon ./src/app.ts",
    "cm": "npx git-cz",
    "start-docker": "bash ./scripts/docker-start.sh",
    "test": "nyc --reporter=html --reporter=lcov --reporter=text mocha './src/test/**/*.spec.ts' --require ts-node/register --timeout=10000 --exit"
  },
  "keywords": [
    "graphql",
    "express",
    "node",
    "typescript",
    "node-typescript",
    "graphql-typescript",
    "graphql-express-typescript"
  ],
  "author": "tuev",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.17.0",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-form-data": "^2.0.14",
    "express-session": "^1.17.1",
    "express-status-monitor": "^1.3.3",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-subscriptions": "^1.1.0",
    "http-terminator": "^2.0.3",
    "lightship": "^6.1.0",
    "lodash": "^4.17.20",
    "lusca": "^1.6.1",
    "mongoose": "^5.10.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/chai": "^4.2.12",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.8",
    "@types/express-form-data": "^2.0.1",
    "@types/express-session": "^1.17.0",
    "@types/express-status-monitor": "^1.2.2",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/http-terminator": "^2.0.1",
    "@types/lightship": "^6.1.0",
    "@types/lodash": "^4.14.161",
    "@types/lusca": "^1.6.2",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.10.1",
    "@types/sinon": "^9.0.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-cz": "^4.7.1",
    "husky": ">=4.3.0",
    "lint-staged": ">=10.3.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "2.1.1",
    "sinon": "^9.0.3",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,md,ts}": "prettier --write"
  },
  "nyc": {
    "exclude": [
      "src/app.ts",
      "src/configs",
      "src/test",
      "configs"
    ]
  }
}
