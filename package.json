{
  "name": "node-express-seed",
  "version": "0.0.1",
  "description": "A boilerplate for Node.js web applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuev/node-express-seed"
  },
  "license": "MIT",
  "author": "tuev",
  "contributors": [],
  "scripts": {
    "start": "nodemon app.ts",
    "cm": "npx git-cz",
    "start-docker": "bash ./scripts/docker-start.sh",
    "test": "nyc --reporter=html --reporter=lcov --reporter=text mocha './src/test/**/*.spec.ts' --require ts-node/register --timeout=10000 --exit"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-form-data": "^2.0.14",
    "express-session": "^1.17.1",
    "express-status-monitor": "^1.3.3",
    "lodash": "^4.17.20",
    "lusca": "^1.6.1",
    "mongoose": "^5.10.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.4",
    "@types/sinon": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-cz": "^4.7.1",
    "husky": ">=4",
    "lint-staged": ">=10",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "prettier": "2.1.1",
    "sinon": "^9.0.3",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,md,ts}": "prettier --write"
  },
  "nyc": {
    "exclude": [
      "app.ts",
      "src/configs",
      "src/test",
      "configs"
    ]
  }
}
